<?xml version="1.0" encoding="UTF-8"?>
<project xmlns="http://maven.apache.org/POM/4.0.0" xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance"
    xsi:schemaLocation="http://maven.apache.org/POM/4.0.0 http://maven.apache.org/maven-v4_0_0.xsd">
  <modelVersion>4.0.0</modelVersion>

  <parent>
    <groupId>org.bytedeco</groupId>
    <artifactId>javacpp-presets</artifactId>
    <version>1.5.5-SNAPSHOT</version>
  </parent>

  <groupId>org.bytedeco</groupId>
  <artifactId>onnxruntime</artifactId>
  <version>1.5.1-${project.parent.version}</version>
  <name>JavaCPP Presets for ONNX Runtime</name>

  <properties>
    <onnxruntime.path>${basedir}/cppbuild/${javacpp.platform}${javacpp.platform.extension}/onnxruntime</onnxruntime.path>
    <javacpp.nativeRequires>
      requires org.bytedeco.dnnl.${javacpp.platform.module};
    </javacpp.nativeRequires>
  </properties>

  <dependencies>
    <dependency>
      <groupId>org.bytedeco</groupId>
      <artifactId>dnnl</artifactId>
      <version>1.6.3-${project.parent.version}</version>
    </dependency>
    <dependency>
      <groupId>org.bytedeco</groupId>
      <artifactId>javacpp</artifactId>
    </dependency>
  </dependencies>

  <build>
    <plugins>
      <plugin>
        <artifactId>maven-resources-plugin</artifactId>
      </plugin>
      <plugin>
        <artifactId>maven-compiler-plugin</artifactId>
        <configuration>
          <source>1.8</source>
          <target>1.8</target>
        </configuration>
      </plugin>
      <plugin>
        <groupId>org.bytedeco</groupId>
        <artifactId>javacpp</artifactId>
        <dependencies>
          <dependency>
            <groupId>org.bytedeco</groupId>
            <artifactId>dnnl-platform</artifactId>
            <version>1.6.3-${project.parent.version}</version>
          </dependency>
        </dependencies>
        <configuration>
          <classPaths>
            <classPath>${basedir}/../dnnl/target/classes/</classPath>
            <classPath>${project.build.outputDirectory}</classPath>
          </classPaths>
          <includePaths>
            <includePath>${basedir}/../dnnl/target/classes/org/bytedeco/openblas/include/</includePath>
            <includePath>${basedir}/../dnnl/src/main/resources/org/bytedeco/openblas/include/</includePath>
            <includePath>${basedir}/../dnnl/cppbuild/${javacpp.platform}/include/</includePath>
            <includePath>${basedir}/cppbuild/${javacpp.platform}${javacpp.platform.extension}/include/onnxruntime/core/session/</includePath>
            <includePath>${basedir}/cppbuild/${javacpp.platform}${javacpp.platform.extension}/include/onnxruntime/</includePath>
            <includePath>${basedir}/cppbuild/${javacpp.platform}${javacpp.platform.extension}/include/</includePath>
            <includePath>${basedir}/target/classes/org/bytedeco/${javacpp.packageName}/include/</includePath>
          </includePaths>
          <linkPaths>
            <linkPath>${basedir}/../dnnl/cppbuild/${javacpp.platform}/lib/</linkPath>
            <linkPath>${basedir}/cppbuild/${javacpp.platform}${javacpp.platform.extension}/lib/</linkPath>
          </linkPaths>
          <preloadPaths>
            <preloadPath>${basedir}/../dnnl/cppbuild/${javacpp.platform}/bin/</preloadPath>
            <preloadPath>${basedir}/cppbuild/${javacpp.platform}${javacpp.platform.extension}/bin/</preloadPath>
          </preloadPaths>
          <buildResources>
            <buildResource>/${javacpp.platform.library.path}/</buildResource>
            <buildResource>/org/bytedeco/dnnl/${javacpp.platform}/</buildResource>
          </buildResources>
          <includeResources>
            <includeResource>/${javacpp.platform.library.path}/include/</includeResource>
            <includeResource>/org/bytedeco/dnnl/include/</includeResource>
            <includeResource>/org/bytedeco/dnnl/${javacpp.platform}/include/</includeResource>
          </includeResources>
          <linkResources>
            <linkResource>/${javacpp.platform.library.path}/</linkResource>
            <linkResource>/${javacpp.platform.library.path}/lib/</linkResource>
            <linkResource>/org/bytedeco/dnnl/${javacpp.platform}/</linkResource>
            <linkResource>/org/bytedeco/dnnl/${javacpp.platform}/lib/</linkResource>
          </linkResources>
          <compilerOptions>
            <compilerOption>${onnxruntime.path}/java/src/main/native/ai_onnxruntime_OnnxMap.cpp</compilerOption>
            <compilerOption>${onnxruntime.path}/java/src/main/native/ai_onnxruntime_OnnxRuntime.cpp</compilerOption>
            <compilerOption>${onnxruntime.path}/java/src/main/native/ai_onnxruntime_OnnxSequence.cpp</compilerOption>
            <compilerOption>${onnxruntime.path}/java/src/main/native/ai_onnxruntime_OnnxTensor.cpp</compilerOption>
            <compilerOption>${onnxruntime.path}/java/src/main/native/ai_onnxruntime_OrtAllocator.cpp</compilerOption>
            <compilerOption>${onnxruntime.path}/java/src/main/native/ai_onnxruntime_OrtEnvironment.cpp</compilerOption>
            <compilerOption>${onnxruntime.path}/java/src/main/native/ai_onnxruntime_OrtSession.cpp</compilerOption>
            <compilerOption>${onnxruntime.path}/java/src/main/native/ai_onnxruntime_OrtSession_SessionOptions.cpp</compilerOption>
            <compilerOption>${onnxruntime.path}/java/src/main/native/OrtJniUtil.cpp</compilerOption>
          </compilerOptions>
        </configuration>
      </plugin>
      <plugin>
        <artifactId>maven-jar-plugin</artifactId>
        <executions>
          <execution>
            <id>default-jar</id>
            <configuration>
              <includes>
                <include>ai/onnxruntime/**</include>
                <include>org/bytedeco/onnxruntime/**</include>
              </includes>
            </configuration>
          </execution>
          <execution>
            <id>javacpp-${javacpp.platform}${javacpp.platform.extension}</id>
            <phase>package</phase>
            <configuration>
              <excludes>
                <exclude>org/bytedeco/onnxruntime/${javacpp.platform}${javacpp.platform.extension}/*.exp</exclude>
                <exclude>org/bytedeco/onnxruntime/${javacpp.platform}${javacpp.platform.extension}/*.lib</exclude>
                <exclude>org/bytedeco/onnxruntime/${javacpp.platform}${javacpp.platform.extension}/*.obj</exclude>
                <exclude>org/bytedeco/onnxruntime/${javacpp.platform}${javacpp.platform.extension}/*omp*</exclude>
              </excludes>
            </configuration>
          </execution>
        </executions>
      </plugin>
      <plugin>
        <groupId>org.moditect</groupId>
        <artifactId>moditect-maven-plugin</artifactId>
      </plugin>
      <plugin>
        <artifactId>maven-dependency-plugin</artifactId>
      </plugin>
      <plugin>
        <artifactId>maven-source-plugin</artifactId>
      </plugin>
      <plugin>
        <artifactId>maven-javadoc-plugin</artifactId>
      </plugin>
    </plugins>
  </build>

</project>
